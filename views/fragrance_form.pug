extends layout 

block content 
  h1= title 

  form(action="", method="post") 
    label(for='name') Name:
    input#name.form-control(type='text', name='name' required='true' value=(undefined === fragrance ? '' : fragrance.name))

    label(for='description') Description:
    textarea#description.form-control(type='text' name='description' required='true') #{undefined === fragrance ? '' : fragrance.description}
    
    label(for='brand') Brand:
    select#brand.form-control(placeholder='Select Brand' name='brand' required='true' value=(undefined === fragrance ? '' : fragrance.brand))
      for brand in brands   
        if fragrance  
          option(value=brand._id selected=(brand._id.toString() === fragrance.brand._id.toString() ? 'selected' : false))= brand.name 
        else 
          option(value=brand._id)= brand.name
    
    label(for='number_in_stock') Number in stock:
    input#number_in_stock.form-control(type='number' min=0 name='number_in_stock' required='true' value=(undefined === fragrance ? '' : fragrance.number_in_stock))
    
    label(for='price') Price:
    input#price.form-control(type='number' min=0 step=0.01 name='price' required='true' value=(undefined === fragrance ? '' : fragrance.price))
    
    button(type='submit') Submit 
  
  if errors 
    ul 
      for error in errors 
        li!= error.msg